{
    "name": "vscode-candy-sugar",
    "displayName": "Candy.Sugar - IntelliSense for sugar.xml",
    "description": "VSCode extensions for Candy.Sugar",
    "author": "tihonove",
    "license": "MIT",
    "version": "0.4.0",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/tihonove/vscode-candy-sugar-extensions"
    },
    "bugs": {
        "url": "https://github.com/tihonove/vscode-candy-sugar-extensions/issues"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "publisher": "tihonove",
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "SKBKontur",
        "vscode",
        "candy.sugar",
        "candy",
        "extension"
    ],
    "activationEvents": [
        "onLanguage:sugar-xml"
    ],
    "main": "./client/out/Extension",
    "contributes": {
        "languages": [
            {
                "id": "sugar-xml",
                "aliases": [
                    "Candy Sugar XML"
                ],
                "filenamePatterns": [
                    "*.sugar.xml"
                ]
            }
        ],
        "grammars": [
            {
                "language": "sugar-xml",
                "scopeName": "text.xml",
                "path": "./syntaxes/sugar.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "vscode-candy-sugar.open-help-page",
                "title": "Browse to documentation",
                "category": "Candy.Sugar"
            },
            {
                "command": "vscode-candy-sugar.closeTag",
                "title": "Close tag",
                "category": "Candy.Sugar"
            }
        ],
        "menus": {
            "editor/context": [{
                "when": "resourceLangId == sugar-xml",
                "command": "vscode-candy-sugar.open-help-page",
                "group": "z_commands"
            }]
        },
        "keybindings": [
            {
                "command": "vscode-candy-sugar.open-help-page",
                "key": "ctrl+f1",
                "mac": "cmd+f1",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Example configuration",
            "properties": {
                "languageServerExample.maxNumberOfProblems": {
                    "scope": "resource",
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "languageServerExample.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "cd client && yarn run update-vscode && cd .. && yarn run compile",
        "compile:client": "babel --source-maps --extensions \".ts,.js\" ./client/src --out-dir ./client/out",
        "compile:server": "babel --source-maps --extensions \".ts,.js\" ./server/src --out-dir ./server/out",
        "compile:validator": "babel --source-maps --extensions \".ts,.js\" ./server/src --out-dir ./validator/dist/server/src && babel --source-maps --extensions \".ts,.js\" ./validator/src --out-dir ./validator/dist/validator/src",
        "compile": "yarn compile:client && yarn compile:server",
        "postinstall": "cd client && yarn install && cd ../server && yarn install && cd ..",
        "watch:client": "babel --watch --source-maps --extensions \".ts\" ./client/src --out-dir ./client/out",
        "watch:server": "babel --watch --source-maps --extensions \".ts\" ./server/src --out-dir ./server/out",
        "lint:server": "tslint --project ./server/tsconfig.json",
        "lint:client": "tslint --project ./client/tsconfig.json",
        "lint:test": "tslint --project ./test/tsconfig.json",
        "lint": "npm-run-all --continue-on-error lint:*",
        "test": "mocha",
        "test:coverage": "nyc --reporter=html --reporter=text mocha"
    },
    "devDependencies": {
        "@babel/node": "^7.0.0",
        "@types/fs-extra": "^5.0.4",
        "@types/mocha": "^5.2.0",
        "@types/node": "^8.0.0",
        "@types/opn": "^5.1.0",
        "@types/rimraf": "^2.0.2",
        "@types/shelljs": "^0.8.0",
        "fs-extra": "^7.0.0",
        "npm-run-all": "^4.1.3",
        "rimraf": "^2.6.2",
        "shelljs": "^0.8.2",
        "typescript": "^3.0.3"
    },
    "dependencies": {
        "@babel/cli": "^7.0.0",
        "@babel/core": "^7.0.1",
        "@babel/plugin-proposal-class-properties": "^7.0.0",
        "@babel/plugin-proposal-decorators": "^7.0.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@babel/preset-typescript": "^7.0.0",
        "@babel/register": "^7.0.0",
        "@types/chai": "^4.1.4",
        "@types/glob": "^7.1.1",
        "@types/lodash": "^4.14.116",
        "@types/nearley": "^2.11.0",
        "babel-plugin-preval": "^3.0.1",
        "chai": "^4.1.2",
        "chai-shallow-deep-equal": "^1.4.6",
        "mocha": "^5.2.0",
        "mocha-typescript": "^1.1.17",
        "nyc": "^13.0.1",
        "opn": "^5.4.0",
        "pegjs": "^0.10.0",
        "prettier": "^1.14.2",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-language-service": "^0.9.9",
        "tslint-plugin-prettier": "^1.3.0",
        "vscode-jsonrpc": "^4.0.0",
        "vscode-languageserver-types": "^3.13.0"
    },
    "nyc": {
        "check-coverage": true,
        "per-file": true,
        "include": [
            "server/**/*.ts"
        ],
        "extension": [
            ".ts",
            ".js"
        ],
        "all": true
    }
}
